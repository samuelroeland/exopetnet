<div class="container">
  <div class="text-center m-4 p-4">
    <h1 class="index-title">Here are all the animals available to rent 🐲</h1>
  </div>

<div class = "container m-5">
  <p>Do you want to rent your animals so other people can give them some love ? 💚</p>
  <%= link_to "Rent your animal", new_animal_path, class:'btn btn-flat'%>
</div>

<div class="index-container">
  <div class="cards-index-page">
    <% @animals.each do |animal| %>
      <div class="col">
        <div class="card-index-page">
          <%= cl_image_tag animal.images[0].key, height: 300, class: "card-img-top", style:"border-top-left-radius: 4%; border-top-right-radius: 4%" %>
          <div class="card-body ms-3 mt-3">
            <div>
            <h5 class="card-title"> <%= animal.name %></h5>
              <p class="card-text"> <%= animal.specie %> from <%= animal.origin %></p>
              <%= link_to "Rent it for €#{animal.price}", animal_path(animal), class:'btn-flat'%>
          </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

